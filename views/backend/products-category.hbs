<body>
<div class="pc-wrap">
  <div class="pc-top">
    <h1 class="pc-title">{{pageTitle}}</h1>

    <div class="pc-controls">
      <form method="GET" action="/admin/products/category/{{categoryKey}}">
        <div class="pc-field">
          <div class="pc-label">Store</div>
          <select class="pc-select" name="storeId" onchange="this.form.submit()">
            <option value="">-- Choose store --</option>
            {{#each stores}}
              <option value="{{_id}}" {{#if (eq _id ../selectedStoreId)}}selected{{/if}}>
                {{name}}
              </option>
            {{/each}}
          </select>
        </div>
      </form>

      {{#if selectedStoreId}}
             <a class="pc-btn" href="/admin/products/create?storeId={{selectedStoreId}}">‚ûï Add Product</a>
      {{else}}
             <a class="pc-btn" href="#" style="opacity:.5; pointer-events:none;">‚ûï Add Product</a>
      {{/if}}
    </div>
  </div>
</div>

<div class="products-grid">
  {{#each products}}
    <div class="product-card" >
      <div class="store-logo" >
          <img class="img-wrap" style="border:2px red"
                src="{{this.storeSnapshot.logo}}"
                alt="{{this.storeSnapshot.name}}"
                 onerror="this.onerror=null; this.src='/img/store-placeholder.png';" />

          {{#if this.offer}}
            <span class="badge-offer">OFFER</span>
          {{/if}}
      </div>
     <div class="product-image">
        <img class="product-preview"
           src="{{this.image}}"
           alt="{{this.name}}"
           onerror="this.onerror=null; this.src='/img/product-placeholder.png';">
      </div>
      <div class="card-body">
        <div class="name-en">{{this.name}}</div>
        {{#if this.name_ar}}<div class="name-ar">{{this.name_ar}}</div>{{/if}}

        <div class="price">QAR {{this.price}}</div>

        {{#if this.details}}
          <div class="meta"><b>Details:</b> {{this.details}}</div>
        {{/if}}
        <div class="actions">
          <!-- ‚úÖ Edit: go to the admin table page filtered by storeId (where Save works) -->
           <a class="btn-small btn-edit" href="/admin/products?storeId={{this.storeId}}">
           Edit</a>

       <!-- ‚úÖ Delete: must be POST -->
        <form action="/admin/products/delete/{{this._id}}" method="POST" style="display:inline;">
          <button class="btn-small btn-delete" type="submit"
           onclick="return confirm('Delete this product?');"> Delete
          </button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>
</body>
<script>
  const fileInput = document.getElementById('imageFile');
  const preview = document.getElementById('preview');

  fileInput?.addEventListener('change', () => {
    const f = fileInput.files?.[0];
    if (!f) return;

    const url = URL.createObjectURL(f);
    preview.src = url;
    preview.style.display = 'block';
  });
</script>

