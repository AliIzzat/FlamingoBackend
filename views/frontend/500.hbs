{{!-- views/frontend/500.hbs --}}
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Server Error</title>
  <style>body{font-family:system-ui;margin:2rem} pre{background:#f6f6f6;padding:1rem;overflow:auto}</style>
</head>
<body>
  <h1>Something went wrong</h1>
  <p>{{message}}</p>
  {{#if stack}}
  <h3>Stack (dev only)</h3>
  <pre>{{stack}}</pre>
  {{/if}}
</body>
</html>
